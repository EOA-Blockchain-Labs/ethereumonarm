[Unit]
Description=Lighthouse Beacon chain daemon (Sepolia)
# Waits for a full network connection
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/etc/ethereum/lighthouse-beacon-sepolia.conf
ExecStart=/usr/bin/lighthouse $ARGS
# Reliable restart policy
Restart=on-failure
RestartSec=5
User=ethereum
SyslogIdentifier=lighthouse-beacon-sepolia
# Increased resource limits
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target