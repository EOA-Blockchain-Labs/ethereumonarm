[Unit]
Description=Ethereum geth client daemon by The Ethereum Foundation
After=network.target

[Service]
EnvironmentFile=/etc/ethereum/ropsten/geth-pry.conf
ExecStartPre=-/bin/bash -c '/usr/bin/test ! -d /home/ethereum/.geth-pry/ropsten/datadir-pry && /usr/bin/geth-rp init /etc/ethereum/ropsten/merge-testnets/ropsten-beacon-chain/genesis.json  --datadir "/home/ethereum/.geth-pry/ropsten/datadir-pry"'
ExecStart=/usr/bin/geth-rp $ARGS
Restart=always
User=ethereum

[Install]
WantedBy=multi-user.target
