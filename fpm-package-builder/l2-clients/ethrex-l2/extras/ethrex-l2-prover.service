[Unit]
Description=Ethrex L2 Prover (Ethereum on ARM)
After=network.target ethrex-l2.service
Wants=ethrex-l2.service

[Service]
EnvironmentFile=/etc/ethereum/ethrex-l2-prover.conf
ExecStart=/usr/bin/ethrex-l2 l2 prover $ARGS
Restart=always
User=ethereum
KillSignal=SIGTERM
TimeoutStopSec=1200
SyslogIdentifier=ethrex-l2-prover

[Install]
WantedBy=multi-user.target