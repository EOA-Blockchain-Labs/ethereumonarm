[Unit]
Description=Ethereum Besu client daemon (Hoodi)
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/etc/ethereum/besu-hoodi.conf
Environment="JAVA_OPTS=-Xmx5g"
ExecStart=/usr/bin/besu $ARGS
Restart=on-failure
RestartSec=5
User=ethereum
SyslogIdentifier=besu-hoodi
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target