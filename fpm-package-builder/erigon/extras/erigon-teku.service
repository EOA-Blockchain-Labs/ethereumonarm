[Unit]
Description=Ethereum erigon client daemon
After=network.target

[Service]
EnvironmentFile=/etc/ethereum/ropsten/erigon-teku.conf
ExecStartPre=-/bin/bash -c '/usr/bin/test ! -d /home/ethereum/.erigon-teku/ropsten/datadir-teku && /usr/bin/erigon-rp init /etc/ethereum/ropsten/merge-testnets/ropsten/genesis.json  --datadir "/home/ethereum/.erigon-teku/ropsten/datadir-teku"'
ExecStart=/usr/bin/erigon-rp $ARGS
Restart=always
User=ethereum

[Install]
WantedBy=multi-user.target
