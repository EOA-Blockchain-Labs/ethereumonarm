[Unit]
Description=Nimbus Validator Client (Gnosis)
After=network-online.target
Wants=network-online.target

[Service]
User=ethereum
EnvironmentFile=/etc/ethereum/nimbus-validator-gnosis.conf
ExecStart=/usr/bin/nimbus_validator_client $ARGS
Restart=on-failure
RestartSec=5
WorkingDirectory=/home/ethereum
LimitNOFILE=1000000
LimitNPROC=65536
SyslogIdentifier=nimbus-validator-gnosis

[Install]
WantedBy=multi-user.target
