[Unit]
Description=Teku Beacon chain daemon (Mainne)
After=network-online.target
Wants=network-online.target

[Service]
Environment="JAVA_OPTS=-Xmx5g"
EnvironmentFile=/etc/ethereum/teku-beacon.conf
ExecStart=/usr/bin/teku $ARGS
Restart=on-failure
RestartSec=5
User=ethereum
SyslogIdentifier=teku-beacon
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target