#!/bin/bash

# Check if the script is running as root
if [ "$(id -u)" -eq 0 ]; then
  echo "This script should be run as ethereum user. Exiting..."
  exit 1
fi

# Check for necessary packages

# arbitrum URL
NITRO_URL="https://snapshot.arbitrum.io/mainnet/nitro.tar"
NITRO_FILE=$(basename https://snapshot.arbitrum.io/mainnet/nitro.tar"

echo "Downloading Bor Snapshot... This will take a few minutes please be patient"
mkdir -p /home/ethereum/.arbitrum/arb1
wget -c $NITRO_URL
echo "Decompressing Bor Snapshot... This will take a few minutes. Please be patient"
tar -xvf $NITRO_FILE -C /home/ethereum/.arbitrum/arb1
