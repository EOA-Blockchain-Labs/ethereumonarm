# ======================================================================
# Ethereum on ARM ‚Äî Production Packaging Makefile (ethrex-l2)
# ----------------------------------------------------------------------
# Builds .deb and .rpm packages for ARM systems using FPM.
# - Downloads the latest upstream ethrex-l2 binary from GitHub
# - Stages files into ./sources/usr/bin
# - Applies EOA packaging standards and metadata
# ======================================================================

.SILENT:
SHELL := /bin/bash
.DEFAULT_GOAL := all

# ----------------------------------------------------------------------
# Package metadata
# ----------------------------------------------------------------------
PKG_NAME        ?= ethrex-l2
PKG_RELEASE     ?= 0
PKG_ARCH        ?= arm64
PKG_ARCH_RPM    ?= aarch64
PKG_VENDOR      ?= Ethereum on ARM
PKG_LICENSE     ?= GNU Lesser General Public License v3.0
PKG_DESCRIPTION ?= Ethrex L2 is a minimalist, modular, and fast rollup implementation built by LambdaClass
PKG_MAINTAINER  ?= Diego Losada <dlosada@ethereumonarm.com>
CATEGORY        ?= science
WEB_URL         ?= https://github.com/lambdaclass/ethrex
SOURCESDIR      ?= sources
OUTPUTDIR       ?= ../../../packages

# ----------------------------------------------------------------------
# Upstream version and source info
# ----------------------------------------------------------------------
# Version is hardcoded but can be overridden (e.g., make ETHREX_L2_VERSION=5.0.1)
ETHREX_L2_VERSION ?= 5.0.0

# Create a tag with "v" for the download URL
ETHREX_L2_TAG_V := v$(ETHREX_L2_VERSION)
ETHREX_L2_URL   := https://github.com/lambdaclass/ethrex/releases/download/$(ETHREX_L2_TAG_V)/ethrex-l2-linux-$(PKG_ARCH_RPM)

PKG_DEB      := $(OUTPUTDIR)/$(PKG_NAME)_$(ETHREX_L2_VERSION)-$(PKG_RELEASE)_$(PKG_ARCH).deb
PKG_RPM      := $(OUTPUTDIR)/$(PKG_NAME)-$(ETHREX_L2_VERSION)-$(PKG_RELEASE).$(PKG_ARCH_RPM).rpm

# ----------------------------------------------------------------------
# FPM common options
# ----------------------------------------------------------------------
FPM_COMMON_OPTS = \
    -s dir \
    -n $(PKG_NAME) \
    -v $(ETHREX_L2_VERSION) \
    --iteration $(PKG_RELEASE) \
    --vendor "$(PKG_VENDOR)" \
    --license "$(PKG_LICENSE)" \
    --description "$(PKG_DESCRIPTION)" \
    --maintainer "$(PKG_MAINTAINER)" \
    --category "$(CATEGORY)" \
    --url "$(WEB_URL)" \
    -C $(SOURCESDIR) \
    -x '*/.gitkeep'

# ----------------------------------------------------------------------
# Debian-specific options
# ----------------------------------------------------------------------
FPM_DEB_OPTS = $(FPM_COMMON_OPTS) \
    -t deb \
    --architecture $(PKG_ARCH) \
    --deb-no-default-config-files \
    $(shell test -d extras && find extras -name 'ethrex-l2*.service' -printf "--deb-systemd %p ") \
    $(shell test -d $(SOURCESDIR)/etc && find $(SOURCESDIR)/etc -type f -printf "--config-files /etc/%P " || true) \
    --depends merge-config

# ----------------------------------------------------------------------
# RPM-specific options
# ----------------------------------------------------------------------
FPM_RPM_OPTS = $(FPM_COMMON_OPTS) \
    -t rpm \
    --architecture $(PKG_ARCH_RPM) \
    $(shell test -d extras && find extras -name 'ethrex-l2*.service' -printf "--rpm-systemd %p ") \
    --depends merge-config

# ----------------------------------------------------------------------
# Targets
# ----------------------------------------------------------------------
.PHONY: all prepare deb rpm clean test release help

# ----------------------------------------------------------------------
# all ‚Äî default target for local builds
# ----------------------------------------------------------------------
all: prepare deb clean test ## Default local build pipeline

# ----------------------------------------------------------------------
# prepare ‚Äî download & stage ethrex-l2 binary
# ----------------------------------------------------------------------
prepare: ## Download latest Ethrex-L2 and stage into $(SOURCESDIR)/usr/bin
	@echo "üîé Using Ethrex L2 version $(ETHREX_L2_VERSION)..."
	@echo "üîΩ Downloading Ethrex L2 $(ETHREX_L2_VERSION) ($(ETHREX_L2_TAG_V))..."
	mkdir -p $(SOURCESDIR)/usr/bin
	wget -q -O "$(SOURCESDIR)/usr/bin/ethrex-l2" "$(ETHREX_L2_URL)" || { echo "‚ùå Download failed: $(ETHREX_L2_URL)"; exit 1; };
	chmod 0755 "$(SOURCESDIR)/usr/bin/ethrex-l2"
	@echo "‚úÖ Binary ready at $(SOURCESDIR)/usr/bin/ethrex-l2"

# ----------------------------------------------------------------------
# deb ‚Äî build Debian package
# ----------------------------------------------------------------------
deb: prepare ## Build .deb package
	mkdir -p $(OUTPUTDIR)
	@echo "üì¶ Building DEB package..."
	fpm $(FPM_DEB_OPTS) -p "$(PKG_DEB)" .
	if [[ -f "$(PKG_DEB)" ]]; then \
	    echo "‚úÖ DEB package created at $(PKG_DEB)"; \
	else \
	    echo "‚ùå DEB package creation failed."; exit 1; \
	fi

# ----------------------------------------------------------------------
# rpm ‚Äî build RPM package
# ----------------------------------------------------------------------
rpm: prepare ## Build .rpm package
	mkdir -p $(OUTPUTDIR)
	@echo "üì¶ Building RPM package..."
	fpm $(FPM_RPM_OPTS) -p "$(PKG_RPM)" .
	if [[ -f "$(PKG_RPM)" ]]; then \
	    echo "‚úÖ RPM package created at $(PKG_RPM)"; \
	else \
	    echo "‚ùå RPM package creation failed."; exit 1; \
	fi

# ----------------------------------------------------------------------
# clean ‚Äî remove build artifacts
# ----------------------------------------------------------------------
clean: ## Remove staged binaries and temp files
	rm -rf $(SOURCESDIR)/usr/bin/ethrex-l2*
	@echo "üßπ Clean complete (staged binaries removed)."

# ----------------------------------------------------------------------
# test ‚Äî verify build success
# ----------------------------------------------------------------------
test: ## Check that .deb exists
	if [[ -f "$(PKG_DEB)" ]]; then \
	    echo "üß™ Test: .deb exists ‚Äî OK ‚úÖ"; \
	else \
	    echo "üß™ Test: .deb missing ‚Äî ‚ùå"; exit 1; \
	fi

# ----------------------------------------------------------------------
# release ‚Äî full CI build (includes RPM)
# ----------------------------------------------------------------------
release: clean prepare deb rpm test ## Clean + Prepare + Build + Test (all)
	@echo "üéâ All packages built successfully for $(PKG_ARCH)"

# ----------------------------------------------------------------------
# help ‚Äî show all available targets
# ----------------------------------------------------------------------
help: ## Show available targets
	echo ""
	echo "EOA Packaging ‚Äî $(PKG_NAME)"
	echo ""
	awk 'BEGIN {FS = ":.*##"} /^[a-zA-Z0-9_%-]+:.*?##/ { printf "  \033[36m%-12s\033[0m %s\n", $$1, $$2 }' $(MAKEFILE_LIST)
	echo ""
	echo "Version resolved: $(ETHREX_L2_VERSION) (Tag: $(ETHREX_L2_TAG_V))"
	echo "Sources dir     : $(SOURCESDIR)"
	echo "Output dir      : $(OUTPUTDIR)"
	echo ""

# ======================================================================
# End of file
# ======================================================================