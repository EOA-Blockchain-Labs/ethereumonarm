[Unit]
Description=Grandine Validator Client (Obol Hoodi)
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/etc/ethereum/dvt/grandine-validator-hoodi-obol.conf
ExecStart=/usr/bin/grandine $ARGS
Restart=always
User=ethereum
SyslogIdentifier=grandine-validator-hoodi-obol
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target
