[Unit]
Description=Ethereum Ethrex client daemon (Sepolia)
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/etc/ethereum/ethrex-sepolia.conf
ExecStart=/usr/bin/ethrex $ARGS
Restart=on-failure
RestartSec=5
User=ethereum
SyslogIdentifier=ethrex-sepolia
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target