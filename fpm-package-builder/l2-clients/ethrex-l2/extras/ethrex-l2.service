[Unit]
Description=Ethrex L2 Sequencer (Ethereum on ARM)
After=network.target

[Service]
EnvironmentFile=/etc/ethereum/ethrex-l2.conf
ExecStart=/usr/bin/ethrex-l2 l2 $ARGS
Restart=always
User=ethereum
KillSignal=SIGTERM
TimeoutStopSec=1200
SyslogIdentifier=ethrex-l2

[Install]
WantedBy=multi-user.target
