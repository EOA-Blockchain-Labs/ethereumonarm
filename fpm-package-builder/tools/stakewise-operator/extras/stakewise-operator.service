[Unit]
Description=StakeWise V3 Operator Service
After=network.target

[Service]
Type=simple
User=ethereum
Group=ethereum
ExecStart=/usr/local/bin/stakewise-operator start --config /etc/ethereum/stakewise-operator.conf
Restart=always
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
