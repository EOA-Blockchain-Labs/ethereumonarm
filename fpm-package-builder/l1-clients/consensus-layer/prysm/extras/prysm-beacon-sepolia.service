[Unit]
Description=Prysm Beacon chain daemon Sepolia

After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/etc/ethereum/prysm-beacon-sepolia.conf
ExecStart=/usr/bin/beacon-chain $ARGS

Restart=on-failure
RestartSec=5
User=ethereum
SyslogIdentifier=prysm-beacon-sepolia

LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target